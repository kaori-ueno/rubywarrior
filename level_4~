class Player
  def play_turn(warrior)
    @health
    if warrior.feel.enemy? then
        warrior.attack!
    elsif warrior.feel.captive? then
      warrior.rescue!
    elsif warrior.health < 8 then
      warrior.rest!
      @health = 20 - warrior.health
    elsif @health != nil then
      if @health > 0 then
        warrior.rest!
        @health = @health - 2
      else
        warrior.walk!
      end
    else
      warrior.walk!
    end
  end
end